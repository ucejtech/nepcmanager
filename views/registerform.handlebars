<!DOCTYPE html>
<html>
<head>
  <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
  <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="76x76" href="../assets/img/logo.png" />
    <link rel="icon" type="image/png" href="../assets/img/logo.png" />
  <!-- <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" /> -->
  <link rel="stylesheet" type="text/css" href="/assets/css/material-icons.css">
  <link href="/assets/css/material-dashboard.css" rel="stylesheet" />
  <!-- Bootstrap core CSS     -->
  <link href="/assets/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" type="text/css" href="/css/login.css">
  <script src="/assets/js/jquery-3.2.1.min.js" type="text/javascript"></script>
  <script src="/assets/js/bootstrap-notify.js"></script>

  <title>Register | Planner</title>
  <style>
    @media screen and (max-width: 800px) {
       .container {
          margin-top: 30px;
          /*display: none;*/
    }
}
.form .register-form {
  display: block;
}
  </style>
</head>
<body>

  <div class="container login-page">
  {{#if errors}}
      {{#each errors}}
          <script type="text/javascript">
              $.notify({
                icon: "error",
                title: "<strong>Error</strong>",
                message: "{{ msg }}.",
              },{
                  // settings
                  type: "warning"
              });
            </script>
      {{/each}}
  {{/if}}
  <div class="form">

    <form class="register-form" method="POST" action="/users/register">
      <input name="fullname" type="text" placeholder="Fullname"/>
      <input name="username" type="text" placeholder="Username"/>
      <input name="email" type="email" placeholder="Email address"/>
      <input name="password" type="password" placeholder="Password"/>
      <input name="password2" type="password" placeholder="Retype Password"/>
      <button id="register_new_user" class="btn btn-primary">Sign up</button>
      <p class="message">Already registered? <a href="/users/login">Sign In</a></p>
    </form>
  </div>
</div>



<!--   Core JS Files   -->
